<resources>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:minHeight">50sp</item>
    </style>

    <style name="menu" parent="button">
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/menu_background</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="button_red" parent="@style/button">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="button_green" parent="@style/button">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="button_blue" parent="@style/button">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="button_yellow" parent="@style/button">
        <item name="android:background">@drawable/button_yellow</item>
    </style>
</resources>